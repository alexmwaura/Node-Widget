{
    "name": "widget",
    "version": "1.0.0",
    "description": "Payment widget web server",
    "main": "server/index.js",
    "scripts": {
        "format": "prettier --write \"src/**/*.{js,jsx}\"",
        "lint": "eslint \"src/**/*.{js,jsx}\" --quiet",
        "dev": "parcel src/index.html",
        "build:css": "postcss src/assets/tailwind.css -o src/assets/styles.css",
        "watch:css": "postcss src/assets/tailwind.css -o src/assets/styles.css",
        "build:client": "parcel build --public-url ./dist/ src/index.html",
        "build:server": "parcel build -d dist-server --target node server/index.js",
        "build": "npm run build:client && npm run build:server",
        "start": "npm -s run build && node dist-server/index.js"
    },
    "author": "Alex Mwaura <alexmwaura@protonmail.com>",
    "license": "Apache-2.0",
    "devDependencies": {
        "@babel/cli": "7.13.0",
        "@babel/core": "^7.16.0",
        "@babel/eslint-parser": "7.13.4",
        "@babel/plugin-proposal-class-properties": "7.13.0",
        "@babel/preset-env": "7.13.5",
        "@babel/preset-react": "7.12.13",
        "@parcel/babel-preset-env": "^2.0.1",
        "@tailwindcss/postcss7-compat": "2.0.3",
        "eslint": "7.18.0",
        "eslint-config-prettier": "8.1.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jsx-a11y": "6.4.1",
        "eslint-plugin-react": "7.22.0",
        "eslint-plugin-react-hooks": "4.2.0",
        "parcel": "1.12.3",
        "postcss": "7.0.35",
        "prettier": "2.2.1",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat@2.0.3"
    },
    "dependencies": {
        "@shopify/app-bridge-react": "^2.0.5",
        "express": "4.17.1",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "react-router": "^6.0.2",
        "react-router-dom": "5.2.0"
    }
}
